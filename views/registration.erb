<h1>Регистрация</h1>

<form method="post" action="/register">
<div class="form-group">
  <label for="text-input">Потребителско име: </label>
  <textarea id="text-input"
            class="form-control"
            name="username"
            placeholder="Потребителско име"></textarea>
  <label for="text-input">Парола</label>
  <textarea id="text-input"
            class="form-control"
            input type="password"
            name="password"
            placeholder="Парола"></textarea>

  <label for="text-input">Имена</label>
  <textarea id="text-input"
            class="form-control"
            name="name"
            placeholder="Имена"></textarea>

</div>

<button type="submit" class="btn btn-default">ОК</button>
</form>


