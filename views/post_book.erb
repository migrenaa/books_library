<form method="post" action="/book">

  <div class="form-group">
    <label for="text-input">Име</label>
    <textarea id="text-input"
              class="form-control"
              name="title"
              placeholder="Име"></textarea>
    <label for="text-input">Автор</label>
    <textarea id="text-input"
              class="form-control"
              name="author"
              placeholder="Автор"></textarea>

    <label for="text-input">Жанр</label>
    <textarea id="text-input"
              class="form-control"
              name="genre"
              placeholder="Жанр"></textarea>

    <label for="text-input">Описание</label>
    <textarea id="text-input"
              class="form-control"
              name="description"
              placeholder="Описание"></textarea>
  </div>

  <button type="submit" class="btn btn-default">Добави</button>
</form>
